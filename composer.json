{
    "name": "becklyn/mobiledoc",
    "type": "library",
    "description": "A PHP-based renderer for the mobiledoc format.",
    "homepage": "https://github.com/Becklyn/mobiledoc-php",
    "license": "BSD-3-Clause",
    "authors": [
        {
            "name": "Becklyn Studios",
            "homepage": "https://becklyn.com/"
        }
    ],
    "require": {
        "php": "^7.4|^8.0",
        "ext-dom": "*"
    },
    "require-dev": {
        "ext-json": "*",
        "masterminds/html5": "^2.4"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "composer/package-versions-deprecated": true
        }
    },
    "autoload": {
        "psr-4": {
            "Becklyn\\Mobiledoc\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Becklyn\\Mobiledoc\\": "tests/"
        }
    },
    "suggest": {
        "masterminds/html5": "To automatically preprocess the given HTML to increase compatibility with the native DOM tools when importing HTML."
    }
}
